/** Creating the Initial Table of Artists **//


CREATE TABLE artists (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT,
    country TEXT,
    genre TEXT);

    
    
 /** Inserting Data into the Table **/

